<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Members</title>
</head>
<body>
  <h1>Welcome, <%= user ? user.username : 'Guest' %>!</h1>
  <p>This is the members view.</p>
  
  <a href="/new-message">Create a new message</a>
  <a href="/log-out">Log Out</a>

  <h2>Messages:</h2>
  <% if (messages.length > 0) { %>
    <ul>
      <% messages.forEach(function(user) { %>
        <% if (user.title && user.message) { %>
          <li>
            <h3><%= user.title %></h3>
            <p><%= user.message %></p>
            <small>Posted by <%= user.username %> on <%= new Date(user.message_time).toLocaleString() %></small>
          </li>
        <% } %>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No messages yet.</p>
  <% } %>  

</body>
</html>